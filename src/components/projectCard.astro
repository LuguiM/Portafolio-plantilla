---
import Image from "astro/components/Image.astro"

const { image, textAlt , proyecto } = Astro.props
---

<div class="proyectCard shadow-card bg-purpleBase md:w-[363px]  rounded-xl" data-aos="flip-up" data-aos-duration="1000">
    <div class="flex flex-col md:flex-row justify-center items-center gap-5  p-5 md:py-5  ">
      
        <Image src={image} alt={textAlt} class="rounded-full" height="151" width="150"/>

        <p class="mt-5 text-BlancoBase palanquin-dark-semibold text-[21px]"> {proyecto} </p> 

    </div>
    <button class="proyectCard-button">More info</button>
</div>